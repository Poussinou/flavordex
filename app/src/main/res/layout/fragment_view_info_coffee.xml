<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/entry_title"
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <RatingBar
            android:id="@+id/entry_rating"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="0.5" />

        <TableLayout
            android:id="@+id/entry_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:stretchColumns="1">

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_maker" />

                <LinearLayout android:orientation="vertical">

                    <TextView
                        android:id="@+id/entry_maker"
                        style="@style/TableText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="0dp" />

                    <TextView
                        android:id="@+id/entry_origin"
                        style="@style/TableText.Sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="0dp" />
                </LinearLayout>
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_roaster" />

                <TextView
                    android:id="@+id/entry_roaster"
                    style="@style/TableText"
                    android:width="0dp" />
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_roast_date" />

                <TextView
                    android:id="@+id/entry_roast_date"
                    style="@style/TableText"
                    android:width="0dp" />
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_grind" />

                <TextView
                    android:id="@+id/entry_grind"
                    style="@style/TableText"
                    android:width="0dp" />
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/label_price" />

                <TextView
                    android:id="@+id/entry_price"
                    style="@style/TableText"
                    android:width="0dp" />
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_brew_method" />

                <TextView
                    android:id="@+id/entry_brew_method"
                    style="@style/TableText"
                    android:width="0dp" />
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/label_location" />

                <LinearLayout android:orientation="vertical">

                    <TextView
                        android:id="@+id/entry_location"
                        style="@style/TableText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="0dp" />

                    <TextView
                        android:id="@+id/entry_date"
                        style="@style/TableText.Sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="0dp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView
            style="@style/SubHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coffee_label_stats" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_dose" />

                <TextView
                    android:id="@+id/entry_stats_dose"
                    style="@style/TableText.Stats" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/label_mass"
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_water_mass" />

                <TextView
                    android:id="@+id/entry_stats_mass"
                    style="@style/TableText.Stats" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/label_ratio"
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_cbr" />

                <TextView
                    android:id="@+id/entry_stats_ratio"
                    style="@style/TableText.Stats" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_temp" />

                <TextView
                    android:id="@+id/entry_stats_temp"
                    style="@style/TableText.Stats" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_ext_time" />

                <TextView
                    android:id="@+id/entry_stats_ext_time"
                    style="@style/TableText.Stats" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_tds" />

                <TextView
                    android:id="@+id/entry_stats_tds"
                    style="@style/TableText.Stats" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/coffee_label_yield" />

                <TextView
                    android:id="@+id/entry_stats_yield"
                    style="@style/TableText.Stats" />
            </TableRow>
        </TableLayout>

        <TextView
            style="@style/SubHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_notes" />

        <TextView
            android:id="@+id/entry_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true" />
    </LinearLayout>
</ScrollView>
