<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:maxWidth="@dimen/form_width"
    android:minWidth="@dimen/form_width"
    android:orientation="vertical"
    android:padding="@dimen/form_padding">

    <TextView
        style="@style/SubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header_entry_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TableText.Label.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_title" />

        <EditText
            android:id="@+id/entry_title"
            style="@style/TextInput.Name.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/beer_hint_entry_title"
            android:inputType="text" />
    </LinearLayout>

    <TextView
        style="@style/SubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header_details" />

    <TableLayout
        android:id="@+id/entry_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                style="@style/TableText.Label"
                android:text="@string/beer_label_style" />

            <AutoCompleteTextView
                android:id="@+id/entry_style"
                style="@style/TextInput.Name"
                android:completionThreshold="1"
                android:hint="@string/beer_hint_style"
                android:imeOptions="actionNext" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/TableText.Label"
                android:text="@string/beer_label_maker" />

            <AutoCompleteTextView
                android:id="@+id/entry_maker"
                style="@style/TextInput.Name"
                android:hint="@string/beer_hint_maker"
                android:imeOptions="actionNext" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/TableText.Label"
                android:text="@string/label_origin" />

            <EditText
                android:id="@+id/entry_origin"
                style="@style/TextInput.Name"
                android:hint="@string/hint_origin"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/TableText.Label"
                android:text="@string/label_price" />

            <EditText
                android:id="@+id/entry_price"
                style="@style/TextInput"
                android:hint="@string/hint_price"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/TableText.Label"
                android:text="@string/beer_label_served" />

            <Spinner
                android:id="@+id/entry_serving_type"
                style="@style/Spinner"
                android:entries="@array/beer_serving_types"
                android:prompt="@string/beer_hint_serving" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/TableText.Label"
                android:text="@string/label_location" />

            <EditText
                android:id="@+id/entry_location"
                style="@style/TextInput.Name"
                android:hint="@string/hint_location"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/TableText.Label"
                android:layout_gravity="center_vertical"
                android:text="@string/label_date" />

            <com.ultramegasoft.flavordex2.widget.DateInputWidget
                android:id="@+id/entry_date"
                app:allowClear="false"
                app:showTime="true" />
        </TableRow>
    </TableLayout>

    <include layout="@layout/stats_form_beer" />

    <include layout="@layout/edit_info_foot" />
</LinearLayout>
