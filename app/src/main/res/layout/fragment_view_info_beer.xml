<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <include layout="@layout/view_info_head" />

        <TableLayout
            android:id="@+id/entry_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:shrinkColumns="1"
            android:stretchColumns="1">

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/beer_label_style" />

                <TextView
                    android:id="@+id/entry_style"
                    style="@style/TableText"
                    android:width="0dp" />
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/beer_label_maker" />

                <LinearLayout android:orientation="vertical">

                    <TextView
                        android:id="@+id/entry_maker"
                        style="@style/TableText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="0dp" />

                    <TextView
                        android:id="@+id/entry_origin"
                        style="@style/TableText.Sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="0dp" />
                </LinearLayout>
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/label_price" />

                <TextView
                    android:id="@+id/entry_price"
                    style="@style/TableText"
                    android:width="0dp" />
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/beer_label_served" />

                <TextView
                    android:id="@+id/entry_serving_type"
                    style="@style/TableText"
                    android:width="0dp" />
            </TableRow>

            <TableRow android:background="@drawable/divider">

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/label_tasted" />

                <LinearLayout android:orientation="vertical">

                    <TextView
                        android:id="@+id/entry_location"
                        style="@style/TableText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="0dp" />

                    <TextView
                        android:id="@+id/entry_date"
                        style="@style/TableText.Sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="0dp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView
            style="@style/SubHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/beer_label_stats" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,3">

            <TableRow>

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/beer_label_ibu" />

                <TextView
                    android:id="@+id/entry_stats_ibu"
                    style="@style/TableText.Stats" />

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/beer_label_og" />

                <TextView
                    android:id="@+id/entry_stats_og"
                    style="@style/TableText.Stats" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/beer_label_abv" />

                <TextView
                    android:id="@+id/entry_stats_abv"
                    style="@style/TableText.Stats" />

                <TextView
                    style="@style/TableText.Label"
                    android:text="@string/beer_label_fg" />

                <TextView
                    android:id="@+id/entry_stats_fg"
                    style="@style/TableText.Stats" />
            </TableRow>
        </TableLayout>

        <include layout="@layout/view_info_foot" />
    </LinearLayout>
</ScrollView>
